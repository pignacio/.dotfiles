# play all function
pall() {
  for arg; do
    if [ "$arg" = "--random" ]; then
      SORT_FLAGS="${SORT_FLAGS:-} -R"
    fi
  done
  noglob find $1 -name *.mp3 -o -name *.flac -o -name *.ogg | sort ${SORT_FLAGS:-} | tr '\n' '\0' | xargs -0 -n 10000 mplayer
}

